        <locationX>446</locationX>
        <locationY>458</locationY>
        <defaultConnector>
            <targetReference>PaidOnTime</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Paid_Late</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>PaymentDateT</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <elementReference>Installment_Details.Repay_Date__c</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>PaidLate</targetReference>
            </connector>
            <label>Paid Late</label>
        </rules>
    </decisions>
