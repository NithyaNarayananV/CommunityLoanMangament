    <decisions>
        <description>* If no other Due / Over Due Record is present, Status should be In Progress
* If No other Upcoming records also present, Status should be Cloused</description>
        <name>Account_Status_Desisioning</name>
        <label>Account Status Decisioning</label>
        <locationX>446</locationX>
        <locationY>974</locationY>
        <defaultConnector>
            <targetReference>No_Record_Closed</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default - Close</defaultConnectorLabel>
        <rules>
            <name>Upcoming</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Getting_Other_Due_Records.State__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Upcoming</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Status_to_InProgress</targetReference>
            </connector>
            <label>Upcoming</label>
        </rules>
        <rules>
            <name>Due</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Getting_Other_Due_Records.State__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Due</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Status_Due</targetReference>
            </connector>
            <label>Due</label>
        </rules>
        <rules>
            <name>OverDue</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Getting_Other_Due_Records.State__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>OverDue</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Status_OverDue</targetReference>
            </connector>
            <label>OverDue</label>
        </rules>
    </decisions>
    <decisions>
        <name>Due_Or_OverDue</name>
