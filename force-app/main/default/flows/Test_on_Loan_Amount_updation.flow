<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <constants>
        <name>InitialDedection</name>
        <dataType>Number</dataType>
        <value>
            <numberValue>0.2</numberValue>
        </value>
    </constants>
    <formulas>
        <name>InitialDedectionFormula</name>
        <dataType>Currency</dataType>
        <expression>{!$Record.Loan_Amount__c}*{!InitialDedection}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>mul10</name>
        <dataType>Currency</dataType>
        <expression>{!$Record.Loan_Amount__c}*10</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>Test on Loan Amount updation {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Test on Loan Amount updation</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordCreates>
        <name>Create_Initial_Interest_Detection_on_Regular_Loan</name>
        <label>Create Initial Interest Detection on Regular Loan</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <inputAssignments>
            <field>Action__c</field>
            <value>
                <stringValue>Interest</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Loan_Account__c</field>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Repay_Amount__c</field>
            <value>
                <elementReference>InitialDedectionFormula</elementReference>
            </value>
        </inputAssignments>
        <object>Loan__c</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordCreates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Create_Initial_Interest_Detection_on_Regular_Loan</targetReference>
        </connector>
        <filters>
            <field>Type</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Regular_Loan</stringValue>
            </value>
        </filters>
        <object>Account</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
