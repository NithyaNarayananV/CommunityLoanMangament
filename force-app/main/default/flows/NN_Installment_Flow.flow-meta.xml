    <decisions>
        <description>* If no other Due / Over Due Record is present, Status should be In Progress
* If No other Upcoming records also present, Status should be Cloused</description>
        <name>Account_Status_Desisioning</name>
        <label>Account Status Decisioning</label>
        <locationX>842</locationX>
        <locationY>1190</locationY>
        <defaultConnector>
            <targetReference>Error_Screen</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default - Close</defaultConnectorLabel>
        <rules>
            <name>Upcoming</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Next_Installment.State__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Upcoming</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_Account_Status_to_InProgress</targetReference>
            </connector>
            <label>Upcoming</label>
        </rules>
        <rules>
            <name>Due</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Next_Installment.State__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Due</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_Account_Status_to_Due</targetReference>
            </connector>
            <label>Due</label>
        </rules>
        <rules>
            <name>OverDue</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Next_Installment.State__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>OverDue</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Status_OverDue</targetReference>
            </connector>
            <label>OverDue</label>
        </rules>
        <rules>
            <name>If_No_Next_Installment</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Next_Installment.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Closed_Time</targetReference>
            </connector>
            <label>If No Next Installment</label>
        </rules>
    </decisions>
    <decisions>
